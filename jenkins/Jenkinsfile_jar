pipeline {
    agent {
        any{}
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build Jar Executable') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Build Container From Executable JAR') {
            steps {
                sh 'docker build -f src/main/docker/Dockerfile.jvm -t localhost:5000/utils .'
            }
        }
        stage('Kill Old Instances') {
            steps {
                sh 'docker rm -f utils || true'
            }
        }
        stage('Kill Docker Compose Infrastructure') {
            steps {
                sh 'docker-compose -f utilsStack.yml down'
            }
        }
        stage('START Docker Compose Infrastructure') {
            steps {
                sh 'docker-compose -f utilsStack.yml up -d'
            }
        }
    }
}