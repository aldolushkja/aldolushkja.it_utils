pipeline {
    agent {
        any{}
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build Native Executable') {
            steps {
                sh 'mvn package -Pnative -Dquarkus.native.container-build=true'
            }
        }
        stage('Build Container From Native Executable') {
            steps {
                sh 'docker build -f src/main/docker/Dockerfile.native -t localhost:5000/utils-native .'
            }
        }
        stage('Kill Old Instances') {
            steps {
                sh 'docker rm -f utils-native || true'
            }
        }
        stage('Kill Docker Compose Infrastructure') {
            steps {
                sh 'docker-compose -f utilsNativeStack.yml down'
            }
        }
        stage('START Docker Compose Infrastructure') {
            steps {
                sh 'docker-compose -f utilsNativeStack.yml up -d'
            }
        }
    }
}